@model ZSözlük.Models.ViewModel.ChangePasswordModel

@{
    ViewData["Title"] = "Şifre-Degistir";
}

<div class="container my-3 mt-5">
    <div class="card badge-light">
        <h5 class="card-header badge-info text-center">Şifre Değiştir</h5>
        <div class="row">
            <div class="col-md-4 offset-4 text-center">
                <br />
                @if (ViewBag.IsSuccess==true)
                {
                    <div class="alert alert-success" role="alert">
                       Sifre Basarıyla Degistirildi.
                    </div>
                }
                <form asp-action="ChangePassword">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="CurrentPassword" class="control-label font-weight-bold"></label>
                        <input asp-for="CurrentPassword" class="form-control" />
                        <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="NewPassword" class="control-label font-weight-bold"></label>
                        <input asp-for="NewPassword" class="form-control" />
                        <span asp-validation-for="NewPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ConfirmNewPassword" class="control-label font-weight-bold"></label>
                        <input asp-for="ConfirmNewPassword" class="form-control" />
                        <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Kaydet" class="btn btn-outline-info btn-rounded btn-block my-4 waves-effect z-depth-0" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
