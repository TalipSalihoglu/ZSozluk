@model List<Icerik>


@if (Model.Count > 0)
{
    @foreach (var item in Model)
    {
        <br />
        <div class="row">

            <div class="card">
                <div class="card-body">
                    <h5 class="mt-1">içerik yazarının adi</h5>
                    <p><bold>@item.IcerikFull</bold></p>
                </div>
            </div>
        </div>
    }
}
else
{
    <div class="row">
        <div class=" alert alert-info text-center">
            Bu Baslığa ait içerik bulunmamaktadır.
        </div>
    </div>
}


