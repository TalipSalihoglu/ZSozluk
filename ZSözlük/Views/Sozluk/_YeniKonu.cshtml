@model Konu
    <div >
        <button class="btn btn-info btn-sm" data-target="#YeniKonu" data-toggle="modal">Konu Ekle</button>
    </div>
    <div class="modal" id="YeniKonu" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Yeni Tartışma Konusu</h5>
                </div>
                <form method="post" enctype="multipart/form-data" asp-action="KonuEkle" asp-controller="Sozluk">
                    <div class="form-group">
                        <input class="form-control" asp-for="KonuBaslık" />
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Paylas" class="btn btn-success" />
                    </div>
                </form>
            </div>
        </div>
    </div>