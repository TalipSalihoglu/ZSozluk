@model Konu

<div class="modal fade" id="KonuEkle">
    <div class="modal-dialog">
        <!--Modal Content-->
        <div class="modal-content">

            <div class="modal-header">
                <h4>Konu Ekle</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>


            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        <form asp-action="KonuEkle">
                            <div class="container mt-3">                               
                                <input type="hidden" asp-for="KonuID" />
                                <div class="form-group">
                                    <input asp-for="KonuBaslık" class="form-control" placeholder="Yeni Bir Tartışma Konusu Yaz" />
                                    <span asp-validation-for="@Model.KonuBaslık" class="text-danger"></span>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-primary text-right" data-save="modal">Paylaş</button>
                <button type="button" class="btn btn-warning" data-dismiss="modal">Vazgeç</button>

            </div>

        </div>
    </div>
</div> 