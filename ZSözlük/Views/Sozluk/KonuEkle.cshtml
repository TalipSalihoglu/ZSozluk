@model Konu

<div class="modal fade" id="form" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="form">
        <!--Modal Content-->
        <div class="modal-content">
            <div class="modal-header  border-bottom-0">
                <h4>Konu Ekle</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">&times;</button>
            </div>

            <form asp-action="KonuEkle">
                <div class="modal-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    @*<input type="hidden" asp-for="KonuID"/>*@
                    <div class="form-group">
                        <input asp-for="KonuBaslık" class="form-control" placeholder="Yeni Bir Tartışma Konusu Yaz" />
                        <span asp-validation-for="KonuBaslık" class="text-danger"></span>
                    </div>
                </div>
                <div class="modal-footer border-top-0 d-flex justify-content-center">
                    <button type="submit" value="KonuEkle" class="btn btn-outline-primary badge-pill"> Kaydet </button>
                </div>
            </form>
        </div>
    </div>
</div>

