@model IEnumerable<Konu>

@{
    ViewData["Title"] = "KonuList";
    int i = 1;
}


<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col"> Konu Id </th>
            <th scope="col"> Konu Baslık </th>
            <th scope="col"> İçerikleri Görüntüle </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <th scope="row">@(i++)</th>
            <td>@item.KonuID</td>
            <td> @item.KonuBaslık</td>
            <td>
                <a asp-action="KonuListbyid" asp-route-id="@item.KonuID" class="btn btn-warning"> Görüntüle</a>
            </td>
        </tr>
}
    </tbody>
</table>
