@using ZSözlük.Entities
@using ZSözlük.Models.ViewModel
@model PaginatedListModel<Icerik>

    <h1> Test Paneli </h1>

    <table class="table table-bordered table-hover mt-2">
        <tr>
            <th>içerik ıd </th>
            <th>konu </th>
            <th>içerik </th>
            <th>Sil</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.IcerikID</td>
                <td>@item.KonuID</td>
                <td>@item.IcerikFull</td>
                <td>
                    <a asp-action="Delete" asp-route-id=@item.IcerikID class="btn btn-sm btn-outline-danger text-dark"> Sil </a>
                </td>
            </tr>
        }
    </table>
    @{
        var prevDisabled = !Model.PreviousPage ? "disabled" : "";
        var nextDisabled = !Model.NextPage ? "disabled" : "";
    }

    <a asp-area="Admin" asp-controller="Admin" asp-action="Index" asp-route-pageNumber="@(Model.PageIndex - 1)" class="btn btn-default @prevDisabled">Previous</a>
    <a asp-area="Admin" asp-controller="Admin" asp-action="Index" asp-route-pageNumber="@(Model.PageIndex + 1)" class="btn btn-default @nextDisabled">Next</a>
